program lab1;
{Calculate function value f(x,n), for n = 10, 11 ... 15 and x, changing from 0.6 to 1.1 with a step 0.1}


{$APPTYPE CONSOLE}

Var
  nStart, nLast, k : integer;
  {k - counter for sum,
  nStart - start value for n,
  nLast - last value for n}
  Sum, ValueForSum1, ValueForSum2, ValueForSum3, FirstValue, x, Step, Res : real; //
  {Sum - sum value,
  ValueForSum1 - first numerator value to calculate the sum,
  ValueForSum2 - second numerator value to calculate the sum,
  ValueForSum3 - denominator value to calculate the sum,
  x - function argument,
  Step - step to change x,
  Res - function value}

Begin
  x:= 0.6;
  Step:= 0.1;
  nStart:=10;
  nLast:=15;
  while x<= 1.1 do //Iterate over the value of x, changing from 0.6 to 1.1 with a step 0.1
  begin
    Sum:= 0;
    for k := 1 to nLast do //Compose Sum from k to last value for n
    begin
      ValueForSum1:= 1/exp(2*(k+1)/3) - k;

      ValueForSum2:= sin(k*x);
      //Calculate the root of 5+k, considering the modulus
      //Using e and ln, we find the value of the root. Ln must be >0.
      if ValueForSum2>0 then
        ValueForSum2:= exp(1/(5+k)*ln(sin(k*x)))
      else if ValueForSum2<0 then
        ValueForSum2:= exp(1/(5+k)*ln((-1)*sin(k*x)));

      ValueForSum3:=x+(Ln(k*x*x*x*x)/Ln(2));
      //Calculate the root of 3
      //Using e and ln, same as before
      if ValueForSum3>0 then
        ValueForSum3:= exp(1/3*ln(ValueForSum3))
      else if ValueForSum3<0 then
        ValueForSum3:=(-1) * exp(1/3*ln((-1)*ValueForSum3));
      //else
        //writeln('Значение функции f(n,x) при х= ',x, ' не определена');
        //break;

      Sum:= Sum + ValueForSum1 * ValueForSum2 / ValueForSum3;

      if k >= nStart then // At this stage consider the result, k=n(present value)
      begin
        FirstValue:= 1+cos(Pi*x/k)*cos(Pi*x/k);
        //Calculate the root of 5
        //Using e and ln, same as before
        if FirstValue>0 then
          FirstValue:= exp(1/5*ln(FirstValue))
        else if FirstValue<0 then
          FirstValue:=(-1) * exp(1/5*ln((-1)*FirstValue));

        Res:= FirstValue + Sum;
        Writeln('x= ', x:3:1, ' n= ', k ,' f(x,n)= ', Res:9:5);
      end;

    end;
    Writeln;
    x:=x + Step;

  end;

  Readln;
end.
